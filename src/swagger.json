{
    "openapi": "3.0.0.",
    "info": {
        "title": "Atlas",
        "description": "Essa é uma documentação sobre a Atlas API",
        "version": "1.0.0",
        "contact": {
            "email": "email@email.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Create a user",
                "description": "Create a new user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Rocketseat",
                                    "email": "email@email.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Operaçao realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/user"
                                    }
                                },
                                "examples": {
                                    "user": {
                                        "$ref": "#/components/examples/user"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email já está sendo utilizado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "This email is already in use."
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Retorna todos os usuários.",
                "description": "Somente usuário admin pode acessar.",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/user"
                                    }
                                },
                                "examples": {
                                    "users": {
                                        "$ref": "#/components/examples/users"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário sem permissão ou Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "examples": {
                                    "User is not admin": {
                                        "value": {
                                            "error": "User need to be a administrator to list all users"
                                        }
                                    },
                                    "User does not exists": {
                                        "value": {
                                            "error": "User not found."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Retorna um usuário específico",
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "description": "ID do usuário",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operaçao realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/user"
                                    }
                                },
                                "examples": {
                                    "user": {
                                        "$ref": "#/components/examples/user"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "User not found."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
              "tags": [
                "users"
              ],
              "summary": "Torna admin um usuário.",
              "parameters": [
                {
                  "in": "path",
                  "name": "user_id",
                  "schema": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "required": true
                }
              ],
              "responses": {
                "200": {
                  "description": "Operaçao realizada com sucesso.",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "array",
                        "items": {
                          "$ref": "#/components/schemas/user"
                        }
                      },
                      "examples": {
                        "user": {
                          "$ref": "#/components/examples/user"
                        }
                      }
                    }
                  }
                },
                "404": {
                  "description": "Usuário não encontrado",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "error": {
                            "type": "string"
                          }
                        }
                      },
                      "example": {
                        "error": "User not found"
                      }
                    }
                  }
                }
              }
            }      
          }
    },
    "components": {
        "schemas": {
            "user": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "admin": {
                        "type": "boolean"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string"
                    },
                    "updated_at": {
                        "type": "string"
                    }
                }
            }
        },
        "examples": {
            "user": {
                "value": {
                    "id": "91b07402-05ef-4ba9-9638-8423484840dc",
                    "admin": false,
                    "name": "Rocketseat",
                    "email": "oi@rocketseat.com",
                    "created_at": "2021-03-21T23:58:16.324Z",
                    "updated_at": "2021-03-21T23:58:16.324Z"
                }
            },
            "users": {
